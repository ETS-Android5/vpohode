<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AddLookActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="62dp"
            android:hint="Name of Look"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="62dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">
            <com.google.android.material.slider.RangeSlider
                android:id="@+id/range_slider"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="-35.0"
                android:valueTo="35.0"
                app:labelStyle="@style/AppTheme"
                app:values="@array/initial_slider_values"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/temp_image"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_temp_icon"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center_horizontal"
                >
                <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left"
                />
                <LinearLayout
                android:id="@+id/right_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">
                    <TextView android:id="@+id/set_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:text="@string/palette"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/colorCard1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:layout_marginRight="8dp"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/colorView1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/colorPrimaryDark_rose"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/colorCard2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="8dp"
                            app:cardElevation="3dp"
                            app:cardCornerRadius="10dp">
                            <ImageView
                                android:id="@+id/colorView2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@color/colorPrimaryDark_rose"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/colorCard3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="8dp"
                            android:alpha="0"

                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:id="@+id/colorView3"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="top"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/colorCard4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:layout_marginRight="8dp"
                            android:alpha="0"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:id="@+id/colorView4"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/colorCard5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="8dp"
                            android:alpha="0"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:id="@+id/colorView5"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/colorCard6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="8dp"
                            android:alpha="0"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="3dp">

                            <ImageView
                                android:id="@+id/colorView6"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
