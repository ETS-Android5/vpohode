<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pole">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="489dp"
            app:cardCornerRadius="48dp"
            android:layout_marginTop="-48dp"
            android:layout_marginBottom="15dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="489dp"
                android:background="@drawable/gradient"
                />
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="375dp"
            app:cardCornerRadius="48dp"
            android:stateListAnimator="@animator/card_view"
            android:clickable="true"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:background="?attr/colorAccent"
                android:scaleType="centerCrop"
                android:id="@+id/image_of_item"
                android:src="@drawable/ic_add_foto_margintop48"
                />
                <ImageView
                    android:onClick="goHome"
                    android:src="@drawable/ic_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginLeft="16dp"
                    />
                <ImageView

                    android:src="@drawable/ic_washer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right"

                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/created"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:textSize="14sp"
                android:layout_marginTop="387dp"
                android:layout_marginHorizontal="48dp"
                android:textColor="@color/colorAccent"
                android:textAlignment="textEnd"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="48dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/colorAccent"
                android:backgroundTint="@color/colorAccent"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:id="@+id/name"
                android:hint="@string/enter_name"
                android:layout_marginTop="403dp"
                />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/template_layout"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Шаблон"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:layout_marginLeft="16dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/Template"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/montserrat_alternates_medium"
                    android:textColor="#4059FF"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Бренд"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:layout_marginLeft="16dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <EditText

                android:layout_width="222dp"
                android:layout_gravity="right"

                android:fontFamily="@font/montserrat_alternates_medium"
                android:textColor="#4059FF"
                android:textSize="14sp"

                android:hint="Введите бренд"
                android:layout_marginHorizontal="16dp"
                android:paddingLeft="30dp"
                android:layout_height="50dp"
                android:drawablePadding="16dp"

                android:background="@drawable/edit_text"
                android:drawableLeft="@drawable/ic_search_24"
                android:focusedByDefault="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Стиль"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:layout_marginLeft="16dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edit_text"
                android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/Style"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat_alternates_medium"
                        android:textColor="#4059FF"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Цвет"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:layout_marginLeft="16dp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/colorHex"
                android:layout_width="222dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="#4059FF"
                android:textSize="14sp"
                android:text="Цвет не выбран"
                android:layout_marginHorizontal="16dp"
                android:layout_height="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="5dp"
                android:onClick="onClickColor"
                android:stateListAnimator="@animator/card_view"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_color_lens_20"/>
            </androidx.cardview.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                android:layout_width="222dp"
                android:layout_gravity="right"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="5dp"
                >
                <ImageView
                    android:id="@+id/colorView"
                    android:layout_width="222dp"
                    android:layout_height="50dp"
                    android:background="@color/colorAccent"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            >
            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Теплота"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                />

            <TextView
                android:id="@+id/warmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#4059FF"
                android:text="Среднее"/>

        </LinearLayout>
        <SeekBar
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="16dp"
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:thumb="@drawable/custom_thumb"
            android:splitTrack="false"
            android:progressDrawable="@drawable/seekbar_drawable_progress"
            android:max="2"
            android:progress="1"
            />
        <LinearLayout
            android:id="@+id/usedLayout"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            >
            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Надевалось"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                >
                <ImageView
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:src="@drawable/number_picker"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/minus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_remove_20"/>
                    <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/usedTimes"
                        android:layout_width="65dp"
                        android:layout_height="50dp"
                        android:textColor="#4059FF"
                        android:textAlignment="center"
                        android:text="0"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:textSize="20sp"
                        android:backgroundTint="@color/colorAccent"
                        />
                    <ImageView
                        android:id="@+id/plus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_add_20"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            >
            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:text="@string/typ_item"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_alternates_bold"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"/>
            <Switch
                android:id="@+id/top_bot"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imageLayer1"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="center"
                    android:background="@color/colorAccent"
                    app:srcCompat="@drawable/ic_layer1"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imageLayer2"
                        android:layout_weight="1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/colorAccent"
                        android:scaleType="center"
                        app:srcCompat="@drawable/ic_layer2" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imageLayer3"
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorAccent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_layer3"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="16dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/deleteButton"
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="30dp"
                android:onClick="delete"
                android:stateListAnimator="@animator/card_view"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:src="@drawable/button"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Удалить"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:textColor="@android:color/white"
                    />
            </androidx.cardview.widget.CardView>
            <Space android:id="@+id/spacer"
                android:layout_weight="1"
                android:layout_width="15dp"
                android:layout_height="wrap_content" />
            <androidx.cardview.widget.CardView
                android:id="@+id/btnsave"
                android:layout_width="160dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="30dp"
                android:onClick="delete"
                android:stateListAnimator="@animator/card_view"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:src="@drawable/button"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сохранить"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:textColor="@android:color/white"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>