<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pole">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            android:fontFamily="monospace"
            app:menu="@menu/menu_main"
            app:titleTextColor="@android:color/secondary_text_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/enter_name"
                    android:padding="16dp"/>
                <Spinner
                    android:id="@+id/Template"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pole"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:id="@+id/usedLayout">
                    <TextView
                        android:id="@+id/created"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="@string/used_times"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@android:color/secondary_text_light"/>
                    <NumberPicker
                        android:id="@+id/used"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:orientation="vertical"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:background="?attr/colorAccent"
                android:id="@+id/colorView"
                android:layout_width="10dp"
                android:layout_height="120dp"/>
            <ImageButton
                android:background="?attr/colorAccent"
                android:id="@+id/image_of_item"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_baseline_photo_camera_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_sun"/>
            <SeekBar
                android:layout_weight="25"
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:max="2"
                android:progress="2"
                android:background="@drawable/tempbackground"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_snow" />
            <Space
                android:layout_weight="1"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                ></Space>
            <Button
                android:onClick="onClickColor"

                android:textColor="@android:color/secondary_text_light"
                style="@style/Widget.Shrine.Button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:id="@+id/btnColor"
                app:icon="@drawable/ic_baseline_color_lens_24"
                android:text="@string/color"
                />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <Spinner
            android:id="@+id/Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/pole"
            android:layout_weight="1" />
    <Switch
        android:id="@+id/top_bot"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="@string/typ_item"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="13dp"
        android:layout_marginLeft="5dp"
        />
</LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radios2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/layer1"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:buttonTint="@android:color/secondary_text_light"
                    />

                <RadioButton
                    android:id="@+id/layer2"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:buttonTint="@android:color/secondary_text_light"
                    />

                <RadioButton
                    android:id="@+id/layer3"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:buttonTint="@android:color/secondary_text_light"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginTop="-30dp"
                android:orientation="horizontal"

                >
                <ImageView
                    android:id="@+id/imageLayer1"
                    android:layout_weight="1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_layer1" />

                <ImageView
                    android:id="@+id/imageLayer2"
                    android:layout_weight="1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_layer2" />

                <ImageView
                    android:id="@+id/imageLayer3"
                    android:layout_weight="1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_layer3" />

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="bottom"
        android:layout_gravity="bottom|center_horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@android:color/secondary_text_light"
            style="@style/Widget.Shrine.Button"
            android:id="@+id/deleteButton"
            android:onClick="delete"
            android:text="@string/delete"
            app:icon="@drawable/ic_baseline_delete_24"
            />
        <Space
            android:id="@+id/spacer"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            >
        </Space>
        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save"
            android:padding="15dp"
            android:textColor="@android:color/secondary_text_light"
            style="@style/Widget.Shrine.Button"
            app:icon="@drawable/ic_baseline_filter_drama_24"
            />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>