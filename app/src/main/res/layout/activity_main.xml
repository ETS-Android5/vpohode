<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pole"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorAccent"
        android:fontFamily="monospace"
        app:menu="@menu/menu_main"
        app:titleTextColor="@android:color/secondary_text_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:paddingTop="85dp"
            android:layout_gravity="center"
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/ic_iconv3_dresser_"
            />

        <TextView
            android:id="@+id/textViewWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAlignment="center"
            android:text="Погода Сейчас" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="bottom"
            android:layout_gravity="bottom|center_horizontal"
            >
            <Button
                android:id="@+id/button"
                android:text="Гардероб"
                android:onClick="goToWardrobe"
                app:icon="@drawable/ic_wardrobe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_weight="1"
                android:padding="15dp"
                android:textColor="@android:color/secondary_text_light"
                style="@style/Widget.Shrine.Button"

                />
<Space
    android:layout_width="20dp"
    android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/button2"
                android:text="Подобрать"
                android:onClick="onClickShowItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:layout_weight="1"
                android:padding="15dp"
                android:textColor="@android:color/secondary_text_light"
                style="@style/Widget.Shrine.Button"
                app:icon="@drawable/ic_look"
                />


        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>