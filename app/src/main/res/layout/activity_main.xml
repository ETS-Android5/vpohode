<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pole"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="24dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/avatar"
                android:onClick="logOff"
                android:layout_width="46dp"
                android:layout_height="46dp"
                app:cardCornerRadius="23dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_oval"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    app:cardCornerRadius="19dp"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_avatar_foreground"
                        android:scaleType="centerInside"
                        />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="24dp"
                    >
                    <TextView
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:text="Добро пожаловать"
                        android:textSize="12dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        />
                    <TextView
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        android:textSize="22sp"
                        android:textColor="#4059FF"
                        android:text="Semen Simanov"
                        />

                </LinearLayout>



        </LinearLayout>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="20dp"
            android:elevation="3dp"
            android:translationZ="10dp"
            >
            <ImageView
                android:src="@drawable/gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="165dp"
                app:cardCornerRadius="20dp"
                >
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/foto_city"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
            android:layout_marginTop="167dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/textViewWeather"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="14sp"
                android:textColor="@color/colorAccent"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:gravity="right"
            android:text="@string/weather_header"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom|center_horizontal"
            >
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:id="@+id/card"
                    app:cardCornerRadius="20dp"
                    android:onClick="onClickShowItems"
                    android:stateListAnimator="@animator/card_view"
                    android:clickable="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_whh_circleselectic2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        />
                    <TextView
                        android:layout_marginLeft="76dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="235dp"
                        android:layout_height="15dp"
                        android:text="Собираешся выйти в свет?"
                        android:textSize="12dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_alternates_medium"
                        />
                    <TextView
                        android:layout_marginLeft="76dp"
                        android:layout_marginTop="39dp"
                        android:layout_width="235dp"
                        android:layout_height="25dp"
                        android:text="Подобрать набор"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/montserrat_alternates_bold"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="24dp"
                        android:id="@+id/card2"
                        app:cardCornerRadius="20dp"
                        android:onClick="goToWardrobe"
                        android:elevation="3dp"
                        android:stateListAnimator="@animator/card_view"
                        >
                        <ImageView
                            android:id="@+id/ic_circleselect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_wardrobe"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            />
                        <TextView
                            android:layout_marginLeft="76dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="235dp"
                            android:layout_height="15dp"
                            android:text="Хотите добавить больше вещей?"
                            android:textSize="12dp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/montserrat_alternates_medium"
                            />
                        <TextView
                            android:layout_marginLeft="76dp"
                            android:layout_marginTop="39dp"
                            android:layout_width="235dp"
                            android:layout_height="25dp"
                            android:text="Гардероб"
                            android:textSize="18dp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:id="@+id/card3"
                        app:cardCornerRadius="20dp"
                        android:onClick="goToSettings"
                        android:stateListAnimator="@animator/card_view"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="24dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_settings"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            />
                        <TextView
                            android:layout_marginLeft="76dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="235dp"
                            android:layout_height="15dp"
                            android:text="Настроить приложение под себя?"
                            android:textSize="12dp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/montserrat_alternates_medium"
                            />
                        <TextView
                            android:layout_marginLeft="76dp"
                            android:layout_marginTop="39dp"
                            android:layout_width="235dp"
                            android:layout_height="25dp"
                            android:text="Настройки"
                            android:textSize="18dp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="24dp"
                        android:layout_weight="1"
                        android:id="@+id/card4"
                        android:onClick="scrollTest"
                        app:cardCornerRadius="20dp"
                        android:stateListAnimator="@animator/card_view"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_washer"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            />
                        <TextView
                            android:layout_marginLeft="76dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="235dp"
                            android:layout_height="15dp"
                            android:text="Посмотреть вещи в стирке?"
                            android:textSize="12dp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/montserrat_alternates_medium"
                            />
                        <TextView
                            android:layout_marginLeft="76dp"
                            android:layout_marginTop="39dp"
                            android:layout_width="235dp"
                            android:layout_height="25dp"
                            android:text="Стирка"
                            android:textSize="18dp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/montserrat_alternates_bold"
                            />
                    </androidx.cardview.widget.CardView>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>