<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnBackground"
    tools:context=".screens.SelectLookActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:onClick="goBack"
        android:src="@drawable/ic_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/name_look"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/back"
        android:layout_marginVertical="16dp"
        android:layout_marginRight="46dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name of the look"
        android:background="?attr/colorOnBackground"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:textSize="20sp"
        android:textColor="?android:textColorPrimary"
        android:textAlignment="center"
        />
    <ScrollView
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            >
            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="left"
                />
            <LinearLayout
                android:id="@+id/right_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">
                <TextView android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:text="@string/palette"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="top"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/colorCard1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="5dp"
                        android:layout_marginRight="8dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/colorView1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/colorPrimaryDark_rose"
                            android:scaleType="fitXY" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/colorCard2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="8dp"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/colorView2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/colorPrimaryDark_rose"
                            android:scaleType="fitXY" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/colorCard3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="8dp"
                        android:alpha="0"

                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:id="@+id/colorView3"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:gravity="top"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/colorCard4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="5dp"
                        android:layout_marginRight="8dp"
                        android:alpha="0"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:id="@+id/colorView4"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/colorCard5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="8dp"
                        android:alpha="0"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:id="@+id/colorView5"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/colorCard6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="8dp"
                        android:alpha="0"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:id="@+id/colorView6"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>