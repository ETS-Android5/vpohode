<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:layout_weight="1"
android:gravity="end"
android:layout_gravity="end"
android:padding="5dp"
>

    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="63dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop" />
    <ImageView
        android:layout_toLeftOf="@+id/imageViewPhoto"
        android:id="@+id/imageViewColor"
        android:layout_width="7dp"
        android:layout_height="70dp"
        />
    <TextView
        android:paddingLeft="3dp"
        android:id="@+id/nameItem"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/imageViewColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:paddingLeft="3dp"
        android:id="@+id/styleItem"
        android:layout_toLeftOf="@+id/imageViewColor"
        android:layout_below="@+id/nameItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
    <TextView
        android:paddingLeft="3dp"
        android:id="@+id/tempItem"
        android:layout_toLeftOf="@+id/imageViewColor"
        android:layout_below="@+id/styleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


</RelativeLayout>