<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:stateListAnimator="@animator/card_view"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/itemBackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginVertical="20dp"
                ><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView android:id="@+id/name"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:textColor="?android:textColorPrimary"
                    android:text="Name of look"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    />
                <TextView android:id="@+id/temp"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_alternates_bold"
                    android:textColor="?android:textColorPrimary"
                    android:text="Tempreture"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    />
                </LinearLayout>

                <TextView android:id="@+id/description"
                    android:fontFamily="@font/montserrat_alternates_medium"
                    android:textSize="12sp"
                    android:text="description"
                    android:layout_weight="1"
                    android:textColor="?android:textColorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="15dp"
                        android:id="@+id/color_card"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        >
                        <ImageView
                            android:id="@+id/colorView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@color/colorPrimaryDark_rose"
                            android:scaleType="fitXY"
                            />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="15dp"
                        android:id="@+id/color_card2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        >
                        <ImageView
                            android:id="@+id/colorView2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@color/colorPrimaryDark_rose"
                            android:scaleType="fitXY"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="47dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_dots"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
