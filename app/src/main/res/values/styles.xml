<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorOnBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="itemBackground">@color/colorCardView</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>

        <item name="alertDialogTheme">@style/AlertDialogCustomLight</item>


<!--        <item name="android:background">@android:color/holo_green_dark</item> all background, can be used-->
<!--        <item name="android:colorBackgroundFloating">@android:color/holo_green_dark</item>   some interesting, image background or cardview-->
<!--        <item name="android:itemBackground">@android:color/holo_green_dark</item>-->
<!--        <item name="android:windowBackground">@android:color/holo_green_dark</item>-->
<!--        <item name="android:panelColorBackground">@android:color/holo_green_dark</item>-->

<!--        <item name="textColorSearchUrl">@android:color/holo_red_dark</item>-->

       <!-- textColor main text -->
        <item name="android:textColorSecondary">@color/textColorHint</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveBtnStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/positiveBtnStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/positiveBtnStyle</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
    </style>


    <style name="OverlayThemeDark" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlackTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryBlackTheme</item>
        <item name="colorOnBackground">@color/colorBackgroundDark</item>
        <item name="android:textColorPrimary">@color/colorBackground</item>
        <item name="android:textColorHint">@color/textColorHintDark</item>
        <item name="android:textColorSecondary">@color/textColorHintDark</item>
        <item name="android:colorControlActivated">@color/colorPrimaryBlackTheme</item>
        <item name="itemBackground">@color/colorCardViewDark</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Used for the title and text -->
        <item name="colorPrimary">@color/colorPrimaryBlackTheme</item>
        <item name="android:textColorPrimary">@color/colorBackground</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorCardViewDark</item>
    </style>
    <style name="AlertDialogCustomLight" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Used for the title and text -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorBackground</item>
    </style>
    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Widget.Shrine.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>
    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="Widget.Shrine.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="background">@drawable/button</item>
    </style>
    <style name="Widget.Shrine.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="positiveBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    <style name="NumberPickerCustomText">
        <item name="android:textSize">14sp</item> // add if you want to change size
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item> // add font (this font folder is present in res folder)
    </style>
</resources>